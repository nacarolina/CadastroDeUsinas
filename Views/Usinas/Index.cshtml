@model IEnumerable<CadastroDeUsinas.Models.Usina>

@{
    ViewData["Title"] = "";
}

<h4>Listagem de usinas de Geração Distribuída</h4>
<hr />
<button class="btn btn-info" style="float:right; margin-bottom:10px"  data-toggle="modal" data-target="#ExemploModalCentralizado" onclick="Cadastrar()" @*asp-action="Create"*@>Cadastrar</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                Fornecedor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbUsinas">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDFornecedor)
                </td>
                <td style=" padding: 10px; width: 8%;">
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="dropdown-item">Editar</a>
                            <a asp-action="Delete" asp-for="ID" class="dropdown-item">Excluir</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <tfoot id="tfUsinas" style="display:none;"><tr><td colspan="4">Não há registros!</td></tr></tfoot>
</table>
<div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Cadastro de usinas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" asp-action="Create">
                <div class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">UC da usina</label>
                    <input type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="chkAtivo">
                    <label class="form-check-label" for="chkAtivo">Ativo</label>
                </div>
                <hr />
                <div class="form-group">
                    <label class="control-label">Fornecedor</label>
                    <input type="text" class="form-control" />
                    <span  class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" id="btnSalvar" onclick="Salvar()" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
</div>
<script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" ></script>
