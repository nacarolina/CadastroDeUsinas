@model IEnumerable<CadastroDeUsinas.Models.Usina>

@{
    ViewData["Title"] = "";
}

<h4>Listagem de usinas de Geração Distribuída</h4>
<hr />
<button class="btn btn-info" style="float:right; margin-bottom:10px" onclick="Cadastrar()" @*asp-action="Create"*@>Cadastrar</button>
<style>
    .autocomplete {
        position: relative;
        display: inline-block;
    }

    .autocomplete-items {
        position: absolute;
        z-index: 99;
        top: 88%;
        left: 0;
        right: 0;
        margin: 0px 16px;
    }
</style>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                Fornecedor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbUsinas"> 
            <tr>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td style=" padding: 10px; width: 8%;">
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item">Editar</a>
                            <a asp-for="ID" class="dropdown-item">Excluir</a>
                        </div>
                    </div>
                </td>
            </tr>
    </tbody>
    <tfoot id="tfUsinas" style="display:none;"><tr><td colspan="4">Não há registros!</td></tr></tfoot>
</table>

<div class="modal fade" id="mdCadastro" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Cadastro de usinas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" asp-action="Create">

                <span class="text-danger">Os campos com <string>*</string> são obrigatórios</span>
                <div class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">*UC da usina</label>
                    <input id="txtUCusina" type="text" class="form-control" />
                </div>
                <hr />
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="chkAtivo">
                    <label class="form-check-label" for="chkAtivo">Ativo</label>
                </div>
                <hr />
                <div class="form-group">
                    <label class="control-label">*Fornecedor</label>
                    <input class='form-control autocomplete' id='txtFornecedor' type='text'>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" id="btnSalvar" onclick="Salvar()" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js"></script>
<script src="~/js/Cadastro.js"></script>